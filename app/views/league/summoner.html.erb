<script>
$( "button" ).click(function() {
 $( "p" ).toggle();
});
</script> -->
</head>
<body>

  <form class="searchbox" action="league#new" method="get">
   <label for=":q"> <input id="q" placeholder="Search a Summoner..." name="q" type="text">
  </form>

 <% if @summon.searched_name_call == nil %>
  <div class="username">
    <img src="http://localhost:3000/assets/defeat.jpeg" class="img-circle" width="200" height="180"><br />
    <section id="cg"> <%= @summon.summoner_name %> does not exist! <br/>
    </div>

  <% elsif @summon.wins == nil  %>
  <div class="no_games_searched_summoner">
    <img src="http://localhost:3000/assets/summoner.jpeg" class="img-circle" width="254" height="236"><br />
    <section id="cg"> <%= @summon.summoner_name %> has yet to <br/> play a ranked game!
    </div>

  <% else %>
 <div class="searched_summoner">
  <img src="http://localhost:3000/assets/icons/<%=@summon.avatar%>" class="img-circle" width="254" height="236"><br />
    <section id="cg"> <%= @summon.summoner_lane %> LANER
    <section id="cg"> <%= @summon.summoner_name %> has <%= @summon.wins %> ranked wins! <br />
      <%= @summon.summoner_name %> has <%= @summon.losses %> ranked losses! <br />
      <button>Advanced Stats</button> <br />
     <%= @summon.tier %>
     <!-- <%= sleep(2)%> <%=@summon.division %> -->
   </div>
   <% end %>

</body>
</html>
